{
  "name": "@safe-global/safe-cli",
  "version": "0.1.0",
  "description": "Modern CLI for Safe Smart Account management",
  "type": "module",
  "bin": {
    "safe": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "safe",
    "gnosis-safe",
    "multisig",
    "ethereum",
    "cli",
    "smart-account",
    "account-abstraction"
  ],
  "author": "Safe Global",
  "license": "LGPL-3.0",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@ledgerhq/hw-app-eth": "^6.46.1",
    "@ledgerhq/hw-transport-node-hid": "^6.29.13",
    "@safe-global/api-kit": "^4.0.0",
    "@safe-global/protocol-kit": "^5.1.1",
    "@safe-global/types-kit": "^3.0.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "ink": "^6.3.1",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.0",
    "viem": "^2.21.8",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.config.ts": [
      "prettier --write"
    ]
  }
}
